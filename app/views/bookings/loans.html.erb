<div class="container col-9">
  <h1>Mes locations</h1>
  <div class="loans-grid">
  <% @loans.each do |loan| %>
      <div class="loans-card">
        <%= cl_image_tag loan.manga.photo, class: "img-loans-card", height: 200, width: 200, gravity: :center, crop: :crop %>
        <div class="description-loans-card">
          <h3><%= loan.manga.serie_name %>: <%= loan.manga.title %></h3>
          <p>Auteur: <%= loan.manga.author %></p>
          <p>Lou√© le: <%= which_day(loan.started_at)%> <%= which_month_downcased(loan.started_at) %> <%= which_year(loan.started_at) %></p>
        </div>
      </div>
  <% end %>
  </div>
</div>