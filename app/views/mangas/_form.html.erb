<div class="container col-12 col-lg-6">
    <h1>Prêter son manga</h1>
  <%= simple_form_for(manga) do |f| %>
    <div class="form-inputs">
      <div class="row">
        <div class="col-12 col-lg-6">
            <%= f.input :serie_name, label: "Série du manga", required: true, error: 'Ne peut pas être vide' %>
        </div>
        <div class="col-12 col-lg-6">
            <%= f.input :title, label: "Titre du manga", required: true, error: 'Ne peut pas être vide' %>
        </div>
      </div>
       <div class="row">
        <div class="col-12 col-lg-6">
          <%= f.input :loan_duration , label: "Durée du prêt en jours", required: true, error: 'Ne peut pas être vide', :collection =>  [7, 14, 21, 28, 35, 42, 49]%>
        </div>
        <div class="col-12 col-lg-6 d-flex align-items-center">
          <%= f.input :photo, label: "Photo du manga" %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>
      </div>
      <div class="row">
        <div class="col-12 col-lg-6">
            <%= f.input :author, label: "Auteur", required: false, error: 'Ne peut pas être vide' %>
        </div>
        <div class="col-12 col-lg-6">
            <%= f.input :editor, label: "Editeur", required: false, error: 'Ne peut pas être vide' %>
        </div>
      </div>
          <%= f.input :description, label: "Description du manga", required: false, error: 'Ne peut pas être vide' %>
          <%= f.input :publication_date, as: :string, label: 'Date de la publication du manga', input_html: { class: "datepicker" }%>
      <div class="row">
        <div class="col-12 col-lg-6">
            <%= f.input :tome_number, label: "Le tome", required: false, error: 'Ne peut pas être vide' %>
        </div>
        <div class="col-12 col-lg-6">
            <%= f.input :genre, label: "Le genre", required: false, error: 'Ne peut pas être vide' %>
        </div>
      </div>
      <div class="row">
        <div class="col-12 col-lg-6">
            <%= f.input :pages_number, label: "Nombre de pages", required: false, error: 'Ne peut pas être vide' %>
        </div>
        <div class="col-12 col-lg-6">
            <%= f.input :language, label: "La langue du manga", required: false, error: 'Ne peut pas être vide' %>
        </div>
      </div>
      <div class="form-actions text-center">
        <%=  f.button :submit, "Mettre en ligne mon manga", class: "button-otaku mb-5" %>
      </div>
    </div>
  <% end %>
</div>
