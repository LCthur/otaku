rails<div class="row">
  <div class="col-lg-3">
    <div class="img">
      <p>img</p>
    </div>
    <div class="secondary-data">
      <p>data</p>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="title p-3">
    <h1><%= @manga.title %></h1>
    <h4><%= @manga.title %>: <%= @manga.description %></h4>
    <h5>Auteur: <%= @manga.author %></h5>
    </div>
    <div class="px-3 description mt-3">
      <h2>Description</h2>
      <p><%= @manga.description %></p>
    </div>
    <div class="px-3 share_buttons text-center mt-3">
      <h1></h1>
      <a href="#" class="btn primary-button mx-1"><i class="fab fa-facebook-f"></i></a>
      <a href="#" class="btn primary-button mx-1"><i class="fab fa-instagram"></i></a>
      <a href="#" class="btn primary-button mx-1"><i class="fab fa-twitter"></i></a>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="action-btn">
      <%= simple_form_for(@loan) do |f| %>
        <%= f.input :loan_duration, label: "Durée du prêt", collection: 1..28 %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
