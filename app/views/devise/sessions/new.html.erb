<div class="container col-12 col-lg-4">
<h1>Se connecter</h1>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  label: 'Mot de passe' %>
      <%= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
    </div>
  <div class="text-center">
    <div class="d-flex justify-content-around mb-3">
      <div class="form-actions">
        <%= f.button :submit, "S'authentifier", class: "button-otaku" %>
      </div>
      <div>
        <%= link_to "Pas de compte ?", new_user_registration_path, class: "button-otaku" %>
      </div>
    </div>
      <%= link_to "Mot de passe oubliÃ© ?", new_user_password_path %> </br>
    <% end %>
  </div>
</div>
