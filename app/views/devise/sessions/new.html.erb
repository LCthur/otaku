<div class="container col-4">
<h2>Se connecter</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  label: 'Mot de passe' %>
      <%= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
    </div>
  <div class="d-flex justify-content-between">
     <div class="form-actions">
      <%= f.button :submit, "S'authentifier", class: "btn primary-button" %>
    </div>
    <%= link_to "Mot de passe oubliÃ© ?", edit_user_password_path, class: "btn primary-button" %>
  <% end %>
  </div>
</div>
